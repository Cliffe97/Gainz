    .w3-display-middle
      span.w3-xxlarge.w3-text-white.w3-wide Line Messenger
  // Container (Portfolio Section)
  #portfolio.w3-content.w3-container.w3-padding-64
    .container
      .section
        .box
          br
          br
          img.w3-round.w3-image.w3-hover-opacity-off(src ='/images/line.jpg',onclick='onClick(this)', alt='Line QR', width='300', height='300')
        .box
          span.w3-xxlarge.w3-wide GainZ also on Line!
          img.w3-round.w3-image.w3-hover-opacity-off(src ='/images/linelogo.png',onclick='onClick(this)', alt='Line logo', width='300', height='300')
