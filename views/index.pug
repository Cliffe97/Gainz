extends layout

block content
  #home.bgimg-1.w3-display-container.w3-opacity-min
    .w3-display-middle(style='white-space:nowrap;')
      span.w3-center.w3-padding-large.w3-black.w3-xlarge.w3-wide.w3-animate-opacity

        span.w3-hide-small GainZ
      .w3-center
          br
          em A BETTER YOU

  #portfolio.w3-content.w3-container.w3-padding-64
    if loggedIn
      h1.w3-center.bold Hello #{user.googlename}
    h3.w3-center "Work in Silence, let your success be your noise"
  .bgimg-2.w3-display-container.w3-opacity-min
    .w3-display-middle
      span.w3-xxlarge.w3-text-white.w3-wide Dialog Flow Bot
  // Container (Portfolio Section)
  #portfolio.w3-content.w3-container.w3-padding-64
    .container
      .section
        .box
          h1 Dialog Flow Bot
          iframe(allow='microphone;', width='350', height='430', src='https://console.dialogflow.com/api-client/demo/embedded/01c4c9d3-fe94-4130-be58-064258baf0ea')
        .box
          h1 Commands
          ol
            li How many [Total Body, Upper Body, Lower Body, Core] workouts
            br
            li Show me the [First, Second, Third...] one
            br
            li Start workout
            br
            li Next exercise
            br
            li Pause
            br
            li Resume
            br
            li Terminate
