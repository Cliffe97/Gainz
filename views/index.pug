      span.w3-xxlarge.w3-text-white.w3-wide Google Assistant
  // Container (Portfolio Section)
  #portfolio.w3-content.w3-container.w3-padding-64
    .container
      .section2
        .box
          br
          br
          img.w3-round.w3-image.w3-hover-opacity-off(src ='/images/fittrainer.png',onclick='onClick(this)', alt='GainZ Google Assistant', width='550', height='500')
